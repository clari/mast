#!/usr/bin/perl

$| = 1;
use v5.030;
use warnings;

use JSON::PP;
use Getopt::Long;
use Mast::Deploy::Step;
Getopt::Long::Configure("pass_through");

my (@contexts, $service_spec_json, $output_file);

GetOptions(
  'context=s' => \@contexts,
  'service-spec-json=s' => \$service_spec_json,
  'output-file=s' => \$output_file,
)
  or die "Error in command line arguments\n";

say "Contexts: @contexts";
say "Service spec: $service_spec_json";

my $actualized_spec = validate_service_spec(
  contexts => \@contexts,
  service_spec_json => $service_spec_json,
);

# Output is optional
if ($output_file) {
  open my $fh, ">", $output_file or die "Cannot open $output_file for writing: $!\n";
  my $json_encoded_service_spec = encode_json $actualized_spec->service_spec;
  say $fh qq|service_spec_json=$json_encoded_service_spec|;
  close $fh;
}
