#!/usr/bin/perl

$| = 1;
use v5.030;
use warnings;

use Getopt::Long;
use Mast::Deploy::Step;

my ($service_spec_json);

GetOptions(
  'service-spec-json=s' => \$service_spec_json,
)
  or die "Error in command line arguments\n";

say "Service spec: $service_spec_json";

my $num_updated = update_elb_listener_rules(
  environment => "placeholder",
  service_spec_json => $service_spec_json,
);

say "Successfully updated " . $num_updated . qq| listener rules.|;
